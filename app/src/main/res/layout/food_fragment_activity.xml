<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FoodFragment"
    android:background="#77ff0000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="105dp"
        android:text="@string/foodHdrTxtView1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/neighbourButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="117dp"
        android:text="@string/getNeighbourFood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/doshikButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:text="@string/doshik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neighbourButton" />

    <Button
        android:id="@+id/stolovayaButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:text="@string/goToStolovaya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doshikButton" />

    <Button
        android:id="@+id/cookButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:text="@string/cook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stolovayaButton" />

    <Button
        android:id="@+id/fastfoodButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:text="@string/fastfood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookButton" />

    <Button
        android:id="@+id/sushiButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="91dp"
        android:text="@string/sushi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastfoodButton" />

    <Button
        android:id="@+id/burgersButton"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="91dp"
        android:text="@string/burgerstwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sushiButton" />

</androidx.constraintlayout.widget.ConstraintLayout>