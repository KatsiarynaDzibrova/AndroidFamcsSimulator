<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7700ff00">

    <Button
        android:id="@+id/gitButton"
        android:layout_width="203dp"
        android:layout_height="103dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="55dp"
        android:text="@string/github_of_project"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formButton" />

    <Button
        android:id="@+id/formButton"
        android:layout_width="203dp"
        android:layout_height="103dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="156dp"
        android:text="@string/feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shanson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="Шансончик"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gitButton" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="42dp"
        android:text="ON"
        app:layout_constraintStart_toEndOf="@+id/shanson"
        app:layout_constraintTop_toBottomOf="@+id/gitButton" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:text="OFF"
        app:layout_constraintStart_toEndOf="@+id/startButton"
        app:layout_constraintTop_toBottomOf="@+id/gitButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
